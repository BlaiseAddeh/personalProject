
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentExam</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <style>
           body {
               background-image: url('../../Content/images/quiz3.png');
               /* Background image is centered vertically and horizontally at all times */
               background-position: center center;
               /* Background image doesn't tile */
               background-repeat: no-repeat;
               /* Background image is fixed in the viewport so that it doesn't move when
        the content's height is greater than the image's height */
               background-attachment: fixed;
               /* This is what makes the background image rescale based
        on the container's size */
               background-size: cover;
               /* Set a background color that will be displayed
        while the background image is loading */
               background-color: #464646;
           }
    </style>


</head>
<body>
    
    @if (@ViewBag.error !=null)
    {
        <div class="alert alert-danger">
            <strong>Danger!</strong> @ViewBag.error
        </div>
    }
    

    @using (Html.BeginForm())
    {
        <div class="container">
            <h1 style="text-align:center; color:#292424; font-family:Algerian">Enter Room Number</h1>
            <br /><br />
            <input type="text" id="room" name="room" placeholder="Room Number" class="form-control" /> <br /><br />
            <input type="submit" value="SUBMIT" class="btn btn-info" />
        </div>
    }

</body>
</html>
